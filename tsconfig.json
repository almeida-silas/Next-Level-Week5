{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
         "ES6"
      ],
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "strict": false,
      "typeRoots": [
         "./node_modules/@types",
         "./src/@types"
      ],
      "paths": {},
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
   },
   "include": [
      "src/**/*"
   ]
}